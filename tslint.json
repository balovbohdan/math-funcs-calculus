{
  "rules": {
    "import-spacing": true,
    "no-require-imports": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "always", "ignore-interfaces", "ignore-bound-class-methods"],
    "max-line-length": [true, {
      "limit": 120,
      "check-regex": true,
      "check-strings": true,
      "ignore-pattern": "^import |^export {(.*?)}"
    }],
    "trailing-comma": [true, {
      "singleline": "never",
      "esSpecCompliant": true,
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }],
    "linterOptions": {
      "exclude": ["dist"]
    }
  }
}
