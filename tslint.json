{
  "rules": {
    "import-spacing": true,
    "no-require-imports": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "always", "ignore-interfaces", "ignore-bound-class-methods"],
    "trailing-comma": [true, {
      "singleline": "never",
      "esSpecCompliant": true,
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }]
  }
}
